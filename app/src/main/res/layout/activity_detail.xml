<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardbgkotakwarna"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <ImageView
        android:id="@+id/dlgmbr_senjata"
        android:layout_width="271dp"
        android:layout_height="261dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/djudulsenjata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jdlsenjata"
        android:textAlignment="center"
        android:textColor="@color/tekswarna1"
        android:textSize="@dimen/textukurjudul"
        android:layout_gravity="center"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ddes_senjata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:paddingTop="10dp"
        android:textColor="@color/tekswarna2"
        android:text="@string/deskripsisenjata"
        android:textSize="@dimen/textukurdesdetail" />


</LinearLayout>