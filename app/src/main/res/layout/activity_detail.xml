<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardbgkotakwarna"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">


    <ImageView
        android:id="@+id/dlgmbr_senjata"
        android:layout_width="271dp"
        android:layout_height="261dp"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        android:src="@drawable/ic_launcher_background" />
    <TextView
        android:id="@+id/djudulsenjata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/jdlsenjata"
        android:textAlignment="center"
        android:textColor="@color/tekswarna1"
        android:textSize="@dimen/textukurjudul"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/ddes_senjata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:text="@string/deskripsisenjata"
                android:textColor="@color/cardbgwarna"
                android:textSize="@dimen/textukurdesdetail" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>